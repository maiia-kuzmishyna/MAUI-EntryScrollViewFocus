<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocusSpike.MainPage">

   <ScrollView BackgroundColor="Beige">
      <VerticalStackLayout
         Spacing="25"
         Padding="30,0"
         VerticalOptions="Center"
         BackgroundColor="DarkGray">

         <Entry Text="This is MAUI Entry" HorizontalOptions="Center" BackgroundColor="White" TextColor="Black"></Entry>

         <Editor Text="This is MAUI Editor" HorizontalOptions="Center" BackgroundColor="White" TextColor="Black"></Editor>

         <ContentView HeightRequest="36" WidthRequest="300" BackgroundColor="AliceBlue" HorizontalOptions="Center">
            <Label Text="Label inside ContentView" TextColor="Black"></Label>
         </ContentView>

         <Button
            Text="MAUI Button" HorizontalOptions="Center" />

      </VerticalStackLayout>
   </ScrollView>

</ContentPage>